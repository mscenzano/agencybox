<div class="row">
	<div class="col-md-4 offset-4">

		<%= form_for @project do |f| %>
			
			<%= f.label :name %>:
		  	<%= f.text_field :name %><br />

		  	<%= f.label :description %>:
		  	<%= f.text_area :description %><br />

		  	<%= f.select :client_id, options_for_select(@clients.map{ |c| [c.name, c.id] }, @client.id) %>

  			<%= f.submit %>
		<% end %>


