<div class="row">
	<div class="col-md-4 offset-4">
		<h4>Hi, <%=current_user.name%></h4>
		<h5>You´re about to create a new user!</h5>

			<%= form_for @user do |f| %>
			
			<%= f.label :name %>:
		  	<%= f.text_field :name %><br />


			<%= f.label :email %>:
			<%= f.email_field :email %><br />
			
			<%= f.label :encrypted_password %>:
			<%= f.text_field :encrypted_password %><br />

			
  			<%= f.submit %>
		<% end %>