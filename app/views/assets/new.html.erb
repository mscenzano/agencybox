<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h3>Client: <%= @client.name %></h3>
			<h5>Contact: <%= @client.contact_name %></h5>
			<h5>Email: <%= @client.email %></h5>
			<h5>Phone: <%= @client.phone %></h5>
			<h3>Project: <%= @project.name %></h3>
			<h5>Description: <%= @project.description %></h5>
			<% if @assets.any? %>
				<h5>Current Files: </h5>
				<% @assets.each do |asset|%>
					<div class="col-md-4">
						<%= image_tag asset.image.url(:medium), class: 'img-responsive' %>
					</div>
				<% end %>
			<% end %>
			<button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#image">Add Image</button>
			<button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#pdf">Add PDF</button>
			
	
			
		</div>

		</div>

	</div>

			<%= render 'form_new_asset_image'%>
			<%= render 'form_new_asset_pdf'%>
	
	</div>

	