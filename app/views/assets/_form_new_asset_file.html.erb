<div id="file" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Add File to <%= @project.name.titleize %></h4>
			</div>
			<%= form_for @project.assets.new, method: :post, url: project_assets_path(@project), html: {multipart: true} do |f| %>
				<div class="modal-body">
					<div class="form-group">
						<%=	f.label :name %>
						<%= f.text_field :name, class: 'form-control', autofocus: true %>
					</div>
					<div class="form-group">
						<%=	f.label :description %>
						<%= f.text_area :description, class: 'form-control', :size => 450%>
					</div>
					<div class="form-group">
						<%=	f.label :file_type %>
						<%= f.select :file_type, [ 'select', 'image', 'pdf'], {}, class: 'form-control' %>
					</div>
					<%= f.file_field :image, class: "hidebuttons", id: "att_img" %>
					<%= f.file_field :pdf, class: "hidebuttons", id: "att_pdf"  %>
						
				</div>
				<div class="modal-footer">
					<div class="button-group">
						<%= f.submit 'Upload', class: 'btn btn-danger pull-left' %>
						<button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
					</div>
				</div>
			<% end %>	      
		</div>
	</div>
</div>

<script>
$(document).on('ready', function(){ 
	
	$("#asset_file_type").change(function() {
	   var sel = $("#asset_file_type").val();
	  if (sel == "image") {
	  		$('#att_img').removeClass("hidebuttons")
	  		$('#att_pdf').addClass("hidebuttons")


	  	};
	  if (sel == "pdf") {
	  			$('#att_pdf').removeClass("hidebuttons")
	  			$('#att_img').addClass("hidebuttons")
	  	};
	  
	});
});

</script>