
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">	
			<h3>Client: <%= @client.name %></h3>
			<h5>Contact name: <%= @client.contact_name %></h5>
			<h5>Email: <%= @client.email %></h5> 
			<h5>Phone: <%= @client.phone %></h5>
			<td><%= link_to "Back to Clients", clients_path, class: 'btn btn-primary btn-sm' %></td>
	<td><%= link_to "Add new Project", new_project_path(@client.id), method: :get, class: 'btn btn-primary btn-sm' %></td>

	<td><%= link_to "Delete Client and Projects", client_path(@client.id), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure you want to delete?"} %></td>
	<br>
	<br>
		
			<% if @projects.present? %>
			<table class="table table-striped table-bordered table-hover" id="datatable-projects">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Action</th>	
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
						<tr>Â 
							<td><h4><%= project.name %></h4></td>
							<td><p><%= project.description[0..128] + '...' %></p></td>
							<td><%= link_to "Project details", project_path(project.id), class: 'btn btn-primary btn-sm', method: :get %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<% end %>
			</div>

	</div>
	
</div>
